.page-header
  %h1 Deny listed email addresses
  %p
    This list is auto-populated with any email addresses that bounce. Any further emails to addresses
    in this list will be "held back" and not sent.
  %p
    After one week addresses are automatically removed from this list

.btn-group
  %button.btn.dropdown-toggle(data-toggle="dropdown")
    - if @app.nil?
      All Apps
    - else
      = @app.name
    %span.caret
  %ul.dropdown-menu
    %li= link_to "All Apps", canonical_deny_lists_path(app: nil, dsn: @dsn)
    - @apps.each do |app|
      %li= link_to app.name, canonical_deny_lists_path(app: app, dsn: @dsn)

.btn-group
  %button.btn.dropdown-toggle(data-toggle="dropdown")
    - if @dsn.nil?
      All DSNs
    - else
      = @dsn
      &mdash;
      = DSN.hard_bounce_codes_short_descriptions[@dsn]

    %span.caret
  %ul.dropdown-menu
    %li= link_to "All DSNs", canonical_deny_lists_path(app: @app, dsn: nil)
    - DSN.hard_bounce_codes_short_descriptions.each do |dsn, description|
      %li
        = link_to canonical_deny_lists_path(app: @app, dsn: dsn) do
          = dsn
          &mdash;
          = description

= paginated_section @deny_lists, renderer: PagerRenderer, previous_label: image_tag("pager/previous.png", size: "13x14"), next_label: image_tag("pager/next.png", size: "13x14"), text: "Address" do
  %p.count= page_entries_info @deny_lists, model: "deny listed email addresses"
  - if @deny_lists.size > 0
    %table.table.table-striped
      %thead
        %tr
          %th Email address
          %th App
          %th{colspan: 2} Reason deny listed
          %th When
      %tbody
        - @deny_lists.each do |deny_list|
          %tr
            %td= deny_list.address
            %td= deny_list.app.name
            %td= deny_list.because_of_delivery_event.dsn
            %td= link_to truncate(deny_list.because_of_delivery_event.extended_status, length: 160), delivery_path(deny_list.because_of_delivery_event.email.id)
            %td
              = time_ago_in_words(deny_list.because_of_delivery_event.time)
              ago
            %td
              = button_to "Remove", deny_list_path(deny_list.id), method: :delete, class: "btn btn-danger"
