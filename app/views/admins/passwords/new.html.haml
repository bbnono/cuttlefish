= form_for(@admin, as: :admin, url: admin_password_path, html: { method: :post }) do |f|
  = render "devise/shared/error_messages", resource: @admin

  .control-group
    = f.label :email
    = f.email_field :email, class: "login-field", placeholder: "Enter your email"
    %span.login-field-icon.fui-man-16

  = f.submit "Send me reset password instructions", class: "btn btn-primary btn-large btn-block"

= render partial: "devise/shared/links"
