<h2>Change your password</h2>

<%= form_for(@admin, as: :admin, url: admin_password_path, html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: @admin %>
  <%= f.hidden_field :reset_password_token %>

  <div class="control-group">
    <%= f.label :password, "New password" %>
    <%= f.password_field :password, class: "login-field", placeholder: "New password" %>
    <span class="login-field-icon fui-lock-16"></span>
  </div>

  <div><%= f.submit "Change my password", class: "btn btn-primary btn-large btn-block" %></div>
<% end %>

<%= render partial: "devise/shared/links" %>
